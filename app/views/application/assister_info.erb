<form name="basic_info" action="/application/assister_info" method="post" class="form col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1" data-parsley-validate>
  <h2 class="page-header">Do you have assistance today?</h2>
	<div class="form-group">
    <label for="assister_org" class="form-label">Your assister</label>
    <select class="form-control solo" name="assister_org" id="assister_org">
      <% @assister_orgs.each do |assister_org| %>
        <option value="<%= assister_org %>"><%= assister_org %></option>
      <% end %>
      <option value=""></option>
      <option value="not_listed">Not listed - add me!</option>
    </select>
  </div>
  <div class="form-group" id="new_assister_info" style="display:none;">
    <p class="form-context">Tell us a little bit about your organization.</p>
      <label for="assister_org_name" class="form-label">Organization Name</label>
      <input id="assister_org_name" type="text" class="form-control" name="assister_org_name" autofocus="autofocus">
      <label for="assister_individual_name" class="form-label">Your Name</label>
      <input id="assister_individual_name" type="text" class="form-control" name="assister_individual_name">
      <label for="assister_phone_number" class="form-label">Contact Phone Number</label>
      <input id="assister_phone_number" type="tel" class="form-control" name="assister_phone_number">
  </div>
  <div class="page-footer">
    <div class="page-footer-content col-md-4 col-md-offset-8">
      <input class="btn next-step" type="submit" value="Next Step">
    </div>
  </div>
</form>

<script>
  $('.btn').button()
  $('#assister_org').change(function() {
      if ($(this).val() === 'not_listed') {
          $("#new_assister_info").show();
      }
      else {
        $('#new_assister_info').hide();
      }
  });
</script>