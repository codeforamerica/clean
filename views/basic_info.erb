<form name="basic_info" action="/application/basic_info" method="post">
<div class="form-body">
	<section class="form-page basic-info">
		<div class="page-content col-md-4 col-md-offset-4">
			<section class="form-section">
				<div class="form-group">
					<input type="text" class="form-control top" name="name" id="name" placeholder="Full name" required required data-parsley-required-message="Name is required to apply" \>
					<input type="text" class="form-control bottom" name="date_of_birth" id="date_of_birth" placeholder="Date of Birth">
				</div>
			</section>
		</div>
	</section>
</div>
<div class="page-footer">
	<div class="footer-content col-md-4 col-md-offset-4">
          <input class="btn next-step" type="submit" value="Next Step: Contact information">
	</div>
</div>
</form>

