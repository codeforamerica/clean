<div class="masthead">
  <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
    <p class="program">CALFRESH & MEDI-CAL</p>
  </div>
</div>
<form name="basic_info" action="/application/basic_info" method="post" class="form col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 m-page scene_element scene_element--fadeinup" data-parsley-validate>
  <div class="form-group cfa-brand">
    <img class="flag-tag" src="<%= url('img/flag_tag.svg') %>" alt="">
    <h4>This is a service provided by <a href="codeforamerica.org">Code for America</a>, a 501(c)(3) non-profit organization.</h4>
  </div>
  <h3>Get started</h3>
	<div class="form-group">
    <h5 class="form-context">Please provide:</h5>
		<input type="text" class="form-control middle" name="name" id="name" placeholder="Your full name" required required data-parsley-required-message="Name is required to apply" \>
		<input type="text" class="form-control bottom" name="date_of_birth" id="date_of_birth" placeholder="Date of birth (MM/DD/YYYY)" required required data-parsley-required-message="Please provide your date of birth in the format described" data-parsley-pattern="^(?:(?:(?:0?[13578]|1[02])(\/|-|\.)31)\1|(?:(?:0?[1,3-9]|1[0-2])(\/|-|\.)(?:29|30)\2))(?:(?:1[6-9]|[2-9]\d)?\d{2})$|^(?:0?2(\/|-|\.)29\3(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00))))$|^(?:(?:0?[1-9])|(?:1[0-2]))(\/|-|\.)(?:0?[1-9]|1\d|2[0-8])\4(?:(?:1[6-9]|[2-9]\d)?\d{2})$">
	</div>
  <div class="page-footer">
    <input class="btn next-step" type="submit" value="Next Step: Contact Information">
  </div>
</form>

<script>
  $('.btn').button()
</script>