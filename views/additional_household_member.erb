<div class="masthead-page">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel-body application-overview">
      <div class="application-identity">
        <small>This is the application of</small>
        <h4>Applicant name</h4>
        <p>Today's date</p>
      </div>
      <div class="application-steps">
        <ul class="list-group">
          <li class="list-group-item">
            <div class="circle"></div>
            <small>Basic information</small>
          </li>
          <li class="list-group-item">
            <div class="circle"></div>
            <small>Contact information</small>
          </li>
          <li class="list-group-item">
            <div class="circle"></div>
            <small>Schedule your interview</small>
          </li>
          <li class="list-group-item">
            <div class="circle"></div>
            <small>Submit your application</small>
          </li>
          <li class="list-group-item">
            <div class="circle"></div>
            <small>Upload documentation</small>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="form-body">
  <section class="form-page contact-info">
    <div class="page-content col-md-4 col-md-offset-4">
      <section class="form-section">
        <div class="form-group">
          <div class="form-control top header">
            <h4>Additional Household Member</h4>
          </div>
          <input type="text" class="form-control middle" name="name" id="name" placeholder="Full name" required required data-parsley-required-message="Name is required to apply" \>
          <input type="text" class="form-control middle" name="date_of_birth" id="date_of_birth" placeholder="Date of Birth">
          <input type="text" class="form-control bottom" name="ssn" id="ssn" placeholder="Social Security Nubmer">
        </div>
        <div class-"form-group">
          <div class="btn-group btn-group-justified" data-toggle="buttons">
            <label class="btn btn-primary form-button" data-toggle="button">
              <input class="form-control" type="radio" name="options" id="female">Female
            </label>
            <label class="btn btn-primary form-button" data-toggle="button">
              <input class="form-control" type="radio" name="options" id="male">Male
            </label>
            <label class="btn btn-primary form-button" data-toggle="button">
              <input class="form-control" type="radio" name="options" id="no-answer">No Answer
            </label>
          </div>
        </div>
      </section>
    </div>
  </section>
</div>
<div class="page-footer">
  <div class="footer-content col-md-4 col-md-offset-4">
    <h3>Any other household members to document?</h3>
    <a class="btn alternate-step" href="<%= url('/application/additional_household_member') %>"><h5>Yes</h5></a>
    <h5 class="or">or</h5>
    <a class="btn next-step" href="<%= url('/application/review_and_submit') %>"><h5>No</h5></a>
  </div>
</div>
<script>
  $('.btn').button()
</script>