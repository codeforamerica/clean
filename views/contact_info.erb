<div class="masthead-page">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel-body application-overview">
      <div class="application-identity">
        <small>This is the application of</small>
        <h4>Applicant name</h4>
        <p>Today's date</p>
      </div>
      <div class="application-steps">
        <ul class="list-group">
          <li class="list-group-item">
            <div class="circle"></div>
            <small>Basic information</small>
          </li>
          <li class="list-group-item">
            <div class="circle"></div>
            <small>Contact information</small>
          </li>
          <li class="list-group-item">
            <div class="circle"></div>
            <small>Schedule your interview</small>
          </li>
          <li class="list-group-item">
            <div class="circle"></div>
            <small>Submit your application</small>
          </li>
          <li class="list-group-item">
            <div class="circle"></div>
            <small>Upload documentation</small>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="form-body">
  <section class="form-page contact-info">
    <div class="page-content col-md-4 col-md-offset-4">
      <section class="form-section">
        <div class="form-group">
          <div class="form-control top header">
            <h4>Contact Information</h4>
          </div>
          <input type="text" class="form-control middle" name="home_phone_number" placeholder="Phone Number">
          <input type="text" class="form-control middle" name="email" placeholder="Email Address">
          <input type="text" class="form-control middle" name="home_address" placeholder="Home Street Address" required required data-parsley-required-message="Address is required to apply" \>
          <input type="text" class="form-control bottom" name="home_zip_code" placeholder="ZIP Code">
          <input type="hidden" class="form-control" name="home_city" value="San Francisco">
          <input type="hidden" class="form-control" name="home_state" value="CA">
        </div>
          <select class="form-control solo" name="primary_language">
            <% @language_options.each do |language| %>
              <option value="<%= language %>"><%= language %></option>
            <% end %>
          </select>

      </section>
    </div>
  </section>
</div>
<div class="page-footer">
  <div class="footer-content col-md-4 col-md-offset-4">
    <button class="btn next-step"></button>
  </div>
</div>